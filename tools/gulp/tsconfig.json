{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "es2017",
    "sourceMap": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "traceResolution": true,
    "outDir": "../../dist/tools/gulp",
    "types": ["node"]
  },
  "files": [
    "gulpfile.ts"
  ]
}
